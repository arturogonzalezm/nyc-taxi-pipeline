# =============================================================================
# NYC TAXI PIPELINE - TERRAFORM VARIABLES
# =============================================================================
# Copy this file to terraform.tfvars and update the values.
# The Python ETL jobs can parse this file to get GCP_PROJECT_ID and GCS_BUCKET.
# =============================================================================

# GCP Configuration
project_id_base    = "nyc-taxi-pipeline"     # Base name for project ID
environment        = "dev"                    # Environment: dev, staging, prod
instance_number    = "001"                    # Instance number for uniqueness
bucket_suffix      = "001"                    # Bucket suffix for uniqueness
resource-type      = "gcs"                    # Resource type (gcs, bigquery, etc.)
project_name       = "NYC Taxi Pipeline"      # Display name in GCP Console
region             = "us-central1"            # GCP region
zone               = "us-central1-a"          # GCP zone

# Billing Account (REQUIRED - get from: gcloud billing accounts list)
billing_account_id = "XXXXXX-XXXXXX-XXXXXX"

# GitHub Configuration (for Workload Identity Federation)
github_repository = "your-org/nyc-taxi-pipeline"  # e.g., "myorg/nyc-taxi-pipeline"

# =============================================================================
# COMPUTED VALUES (for reference - DO NOT SET MANUALLY)
# =============================================================================
# These are computed by Terraform locals and used in Python via terraform_config.py:
#
# GCP_PROJECT_ID = ${project_id_base}-${environment}-${region}-${instance_number}
#                = nyc-taxi-pipeline-dev-us-central1-001
#
# GCS_BUCKET     = ${project_id_base}-${environment}-${resource-type}-${region}-${bucket_suffix}
#                = nyc-taxi-pipeline-dev-gcs-us-central1-001
# =============================================================================
